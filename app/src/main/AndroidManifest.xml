<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.macc.android.chess">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chess"
        android:icon="@drawable/icon"
        android:roundIcon="@drawable/icon">

        <!--
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        -->

        <activity android:name="com.macc.android.chess.LocalGame"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.macc.android.chess.StockfishGame"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.macc.android.chess.OnlineGame"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.macc.android.chess.MainMenu"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.macc.android.chess.Registration"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.macc.android.chess.Profile"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name="com.macc.android.chess.Login"
            android:screenOrientation="portrait">
            <intent-filter> <!-- decides the starting activity -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        <service android:name="com.macc.android.chess.ClosingService"
            android:stopWithTask="false"/> -->

    </application>

</manifest>