<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.macc.android.chess">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chess"
       >

        <activity
            android:name=".Stream"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Impostazioni"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <!--
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        -->
        <activity
            android:name=".LocalGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StockfishGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OnlineGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Registration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter> <!-- decides the starting activity -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>